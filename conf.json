{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": "./src",
    "exclude": [
      ".git",
      ".meteor",
      "node_modules"
    ],
    "includePattern": ".+\\.js(x|doc)?$"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "template": "node_modules/daybrush-jsdoc-template",
    "destination": "./docs",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true
    }
  }
}
